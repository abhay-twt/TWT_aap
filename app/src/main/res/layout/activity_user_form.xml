<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".UserFormActivity">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/cameraAppNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:color="@color/AirForceBlue"
        android:text="Test_App"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"/>

    <EditText
        android:id="@+id/containerNumber"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_edittext"
        android:drawableStart="@drawable/baseline_local_shipping_24"
        android:drawablePadding="18dp"
        android:hint="Container Number"
        android:paddingLeft="28dp"
        android:textColor="@color/black"
        android:textColorHighlight="@color/cardview_dark_background" />

    <EditText
        android:id="@+id/dateTime"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_edittext"
        android:drawableStart="@drawable/baseline_lock_clock_24"
        android:drawablePadding="18dp"
        android:layout_gravity="center"
        android:hint="Time"
        android:paddingLeft="28dp"
        android:textColor="@color/black"
        android:textColorHighlight="@color/cardview_dark_background"/>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:hint="Activity"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp">

        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextViewActivity"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:inputType="none"
            android:textAlignment="textStart" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:hint="Container Type"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal">
        <AutoCompleteTextView
            android:id="@+id/autoComTVContTypeList"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:inputType="none" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:hint="Container Size"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal">
        <AutoCompleteTextView
            android:id="@+id/autoComTVContSizeList"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:inputType="none" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:hint="Location"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal">
        <AutoCompleteTextView
            android:id="@+id/autoComTVLocationList"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:inputType="none" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:hint="Surveyor Name"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal">
        <AutoCompleteTextView
            android:id="@+id/autoComTVSurveyorNameList"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:inputType="none" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:hint="Container Status"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal">
        <AutoCompleteTextView
            android:id="@+id/autoComTVConStatusList"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:inputType="none" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/remarkTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Purple"
        android:text="Remark"
        android:textStyle="normal"
        android:textFontWeight="@integer/material_motion_duration_medium_1"
        android:textAlignment="center"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp" />

    <EditText
        android:id="@+id/editTextTextMultiLine"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_edittext"
        android:ems="10"
        android:gravity="start|top"
        android:layout_gravity="center_horizontal"
        android:inputType="textMultiLine" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/addContainersTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Purple"
            android:text="Add Container Photos"
            android:textStyle="normal"
            android:textFontWeight="@integer/material_motion_duration_medium_1"
            android:textAlignment="center"
            android:textSize="15sp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="20dp" />
        <ImageView
            android:id="@+id/FolderIconImageView"
            android:layout_width="71dp"
            android:layout_height="48dp"
           android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/folder" />
        <ImageView
            android:id="@+id/cameraIconImageView"
            android:layout_width="71dp"
            android:layout_height="48dp"
            app:srcCompat="@drawable/cameraicon"
            android:layout_marginTop="20dp"
           />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_Gallery_Images"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarStyle="outsideInset"
        android:scrollbars="vertical"
        android:layout_marginTop="5dp"
        android:padding="5dp"/>
    <Button
    android:id="@+id/NextButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/AirForceBlue"
    android:text="Next"
    android:textColor="@color/white"
    android:textSize="18sp"
    app:cornerRadius="200dp"
    android:layout_marginTop="30dp"
    android:layout_gravity="center_horizontal"
    android:onClick="moveToNext"/>
</LinearLayout>
</ScrollView>